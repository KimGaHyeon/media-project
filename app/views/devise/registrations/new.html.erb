<div class="block">
  <h2>회원가입</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.email_field :email, placeholder: "이메일" %>
    <%= f.text_field :name, placeholder: "이름" %>

    <%= f.password_field :password, placeholder: "비밀번호" %>
    <%= f.submit "회원가입" %>
  <% end %>

</div>
