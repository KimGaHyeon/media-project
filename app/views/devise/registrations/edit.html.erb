<div class="form-section" style="padding-bottom: 10px;">
  <div class="form-title">
    프로필 수정
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-new">
      이메일
      <%= f.input :email, autofocus: true, autocomplete: "email", label: false %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-new">
      현재 비밀번호
      <%= f.input :current_password, autocomplete: "current-password", label: false%>
    </div>

    <div class="form-new">
      새 비밀번호 <i style="font-size: 12px; color: grey;">(최소 6자 이상)</i>
      <%= f.input :password, autocomplete: "new-password", label: false %>
    </div>

    <div class="form-new">
      비밀번호 확인
      <%= f.input :password_confirmation, autocomplete: "new-password", label: false %>
    </div>

    <div class="form-new">
      담당 업무
      <%= f.input :job, :collection => %w[developer designer project\ manager publisher], :selected => [:develper], label: false %>
    </div>

    <div class="form-new">
      연락처
      <%= f.input :phone, autofocus: true, label: false %>
    </div>

    <div class="form-new">
      주 활동 장소
      <%= f.input :location, autofocus: true, label: false %>
    </div>

    <div class="actions form-button">
      <%= f.submit "저장하기", class: "btn btn-success" %>
    </div>
  <% end %>

</div>
